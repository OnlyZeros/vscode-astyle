{
    "name": "vscode-astyle",
    "displayName": "Astyle",
    "description": "Format C/C++/Obj-C/C#/Java code with Astyle in VSCode",
    "version": "0.2.1",
    "publisher": "chiehyu",
    "repository": {
        "type": "git",
        "url": "https://github.com/welkineins/vscode-astyle"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other",
        "Languages"
    ],
    "keywords": [
        "C",
        "C++",
        "Objective-C",
        "C#",
        "Java"
    ],
    "activationEvents": [
        "onLanguage:cpp",
        "onLanguage:c",
        "onLanguage:objective-c",
        "onLanguage:csharp",
        "onLanguage:java"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Astyle configuration",
            "properties": {
                "astyle.executable": {
                    "type": "string",
                    "default": "astyle",
                    "description": "astyle executable path"
                },
                "astyle.c.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "enable C formatting"
                },
                "astyle.cpp.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "enable C++ formatting"
                },
                "astyle.objective-c.enable": {
                    "type": "boolean",
                    "default": false,
                    "description": "enable Object-C formatting"
                },
                "astyle.csharp.enable": {
                    "type": "boolean",
                    "default": false,
                    "description": "enable C# formatting"
                },
                "astyle.java.enable": {
                    "type": "boolean",
                    "default": false,
                    "description": "enable Java formatting"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "diff-match-patch": "^1.0.0"
    },
    "devDependencies": {
        "vscode": "^0.11.0"
    }
}